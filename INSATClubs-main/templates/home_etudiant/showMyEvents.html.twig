{% extends 'base.html.twig' %}
    {% block stylesheets %}
        <style>
            body {
                background-image:url('{{asset('bg/peoples.png') }}');
            }
            h1 {
                text-align: center;
            }
            #zoom:hover {
                -ms-transform: scale(1.1); /* IE 9 */
                -webkit-transform: scale(1.1); /* Safari 3-8 */
                transform: scale(1.1);
            }
        </style>
    {% endblock %}
{% block body %}
    <h1      style= "background-color: white;">Liste des événements</h1>
    {% for event in events %}
        <div class="media"  id="zoom" style="border: 2px solid rgb(80,80,80);margin:10px;padding: 15px;border-radius: 5% 8% 13% 3%;background-color: white">
            <div class="media-body">
                <h4 class="media-heading">
                    <a href="{{ path('event.show',{id:event.id}) }}">
                        {{ event.title }}
                    </a>
                    <small style="font-size:small"><i>Posté le : {{ event.createdAt|date('d/m/Y') }}</i></small></h4>
                <em>{{ event.description }}</em><br>
                <a class="text-danger" href="{{ path('event.unsubscribe', {id: event.id} ) }}">
                    Desinscrire
                </a>&ensp;
            </div>
            {% if event.image %}
                <div class="media-right media-middle">
                    <img src="{{ '/uploads/' ~ event.image  }}" class="media-object" style="width:200px">
                </div>
            {% endif %}
        </div>
    {% endfor %}
{% endblock %}
