{% extends 'base.html.twig'%}
    {% block stylesheets %}
        <style>
            body {
                background-image:url('{{asset('bg/88.jpg') }}');
            }
        </style>
    {% endblock %}
{% block body %}
    <br>
    <br>
    <div class="align-content-center">
    {{ form_start(form) }}
    <div class="jumbotron" style="background-color: white">
        <h1>
            Modification de votre compte!!!<span class="iconify" data-icon="ic:round-autorenew" data-inline="false"></span>
        </h1>
    <div class="form-group">
        {{ form_row(form.nom,{'attr':{'placeholder':"nom du club"}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.prenom,{'attr':{'placeholder':"nom du club"}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.email,{'attr':{'placeholder':"@Email"}}) }}
