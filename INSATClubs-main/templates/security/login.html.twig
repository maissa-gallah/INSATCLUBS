{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
    {% block stylesheets %}
        <style>
            body {
                background-image:url('{{ asset('bg/log.jpg') }}');
            }
            #button {
                margin : 5px;
            }
        </style>
    {% endblock %}
{% block body %}
    <div class="jumbotron" style="background-color: white">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connectez-vous!
    </h1>
    <label for="inputEmail">Email: </label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Mot de passe:  <span class="iconify" data-icon="et:key" data-inline="false"></span></label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <div class="checkbox mb-3">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="_remember_me"> Remember me
            </label>
    </div>
      <button class="btn btn-lg btn-outline-dark float-right" type="reset" id="button">
          Annuler <span class="iconify" data-icon="topcoat:cancel" data-inline="false"></span>
      </button>
    <button class="btn btn-lg btn-outline-info float-right" type="submit" id="button">
        Se connecter <span class="iconify" data-icon="fa:sign-in" data-inline="false"></span>
    </button>

</form>
    </div>
{% endblock %}
