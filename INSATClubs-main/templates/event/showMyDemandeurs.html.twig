                <td>
                    <a class="text-danger"  href="{{ path('event.delete.demandeur', {id: demandeur.id , id1: event.id }) }}" >
                        <span  class="iconify" data-icon="ant-design:user-delete-outlined" data-inline="false"></span></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}