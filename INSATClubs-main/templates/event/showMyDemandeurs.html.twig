        <div class="alert alert-success">
            {{  message }}
        </div>
    {% endfor %}

    <h1  style=" background-color: white;" >Liste des demandeurs</h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">profil</th>
            <th scope="col">Pr√©nom</th>
            <th scope="col">Nom</th>
            <th scope="col">Accepter</th>
            <th scope="col">Refuser</th>
        </tr>
        </thead>
        <tbody>
        {% for demandeur in demandeurs %}
            <tr id="zoom">
                <th scope="row"><a href="{{ path('etudiant_show',{id: demandeur.etudiant.id} ) }}" >  <img src=" {{ '/uploads/' ~ demandeur.etudiant.imageEmp }}  " id="zoom" height="100" width="100"  style="animation: backwards" alt="Pas d'image"> </a></th>
